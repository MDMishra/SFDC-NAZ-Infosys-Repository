<apex:page docType="html-5.0" controller="ABS_WholesalerAccountDetail"  showHeader="false" setup="false" id="filtersPage" >
<html lang="en" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1"/>
<apex:includeScript value="{!URLFOR($Resource.ABS_Bootstrap, 'jquery.min.js')}"/>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAJcHlM9CnrvooBrt7RmBzpscDCfx2WiM4" type="text/javascript"></script>
<script type="text/javascript" src="/canvas/sdk/js/publisher.js"></script>
<script src="../../soap/ajax/37.0/connection.js" type="text/javascript"></script>
<apex:stylesheet value="{!URLFOR($Resource.LDS, 'assets/styles/salesforce-lightning-design-system.min.css')}" />
</head>
<script>
function navigatemainPage(size,retailer,Premise,Channel)
{
var sizerec=document.getElementById('filtersPage:filtersform:size').value;
//alert(sizerec);
var url='/apex/ABS_WholesalerAccountDetail?size='+sizerec;
if(document.getElementById('filtersPage:filtersform:retailerId').value != null)
{
var retailers=document.getElementById('filtersPage:filtersform:retailerId').value;
url='/apex/ABS_WholesalerAccountDetail?size='+sizerec+'&retailers='+retailers;
}
if(document.getElementById('filtersPage:filtersform:retailerId').value != null)
{
var Premise=document.getElementById('filtersPage:filtersform:Premise').value;
url='/apex/ABS_WholesalerAccountDetail?size='+sizerec+'&retailers='+retailers+'&Premise='+Premise;
}
if(document.getElementById('filtersPage:filtersform:retailerId').value != null)
{
var Channel=document.getElementById('filtersPage:filtersform:channel').value;
url='/apex/ABS_WholesalerAccountDetail?size='+sizerec+'&retailers='+retailers+'&Premise='+Premise+'&Channel='+Channel;
}
//alert(url);
try
{
sforce.one.navigateToURL(url);
}
catch(e)
{
window.location.href = url;
}
}
</script>
<style>
.button {
    background-color: lightblue !important;
    border: 2px;
    color: white;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 15px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 4px;
    background-image: none !important;
}
</style>
<apex:form id="filtersform">
<!-- start of slds -->
<div class="slds" id="sldsclass">
<!-- start of slds conatiner-->
<div  id="sldscontainer" class="slds-container--center slds-container--small slds-container--medium slds-container--large ">  
<!--<div class="slds-card">-->
<div class="slds-grid slds-wrap slds-grid--pull-padded">
 <div class="slds-col--padded slds-small-size--1-of-2 slds-medium-size--2-of-6 slds-large-size--1-of-12">
 </div>
     <div class="slds-col--padded slds-small-size--2-of-2 slds-medium-size--4-of-6 slds-large-size--11-of-12">
         <div class="slds-text-heading--large">Filter</div>
     </div><br></br>                 
    <apex:actionRegion > 
        <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--2-of-12">
            <label class="slds-form-element__label" for="text-input-01">Show Closest:</label> 
         </div>         
        <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--10-of-12">
             <apex:selectList value="{!size}" multiselect="false" size="1" id="size" styleClass="slds-input slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--2-of-6">
                <apex:selectOptions value="{!paginationSizeOptions}"/>
             </apex:selectList>
        </div><br></br><br></br>
         <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--2-of-12">
            <label class="slds-form-element__label" for="text-input-01">Retailer:</label> 
         </div>
          <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--10-of-12">
            <apex:selectList value="{!retailer}" multiselect="false" size="1" id="retailerId" styleClass="slds-input slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--2-of-6">
                <apex:selectOptions value="{!retailerOptions}"/>
            </apex:selectList>
        </div><br></br><br></br>
         <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--2-of-12">
             <label class="slds-form-element__label" for="text-input-01">Premise Flag:</label> 
         </div>
         <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--10-of-12">
            <apex:selectList value="{!Premise}" multiselect="false" size="1" id="Premise" styleClass="slds-input slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--2-of-6">
                <apex:selectOptions value="{!PremiseOptions}"/>
            </apex:selectList>
        </div><br></br><br></br>
        <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--2-of-12">
           <label class="slds-form-element__label" for="text-input-01">Channel:</label> 
        </div>
        <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--10-of-12">
            <apex:selectList value="{!channel}" multiselect="false" size="1" id="channel" styleClass="slds-input slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--2-of-6">
                <apex:selectOptions value="{!ChannelOptions}"/>
            </apex:selectList>
        </div><br></br><br></br>
        <div class="slds-col--padded slds-small-size--1-of-2 slds-medium-size--2-of-6 slds-large-size--1-of-12">
        </div>
        <div class="slds-col--padded slds-small-size--2-of-2 slds-medium-size--4-of-6 slds-large-size--11-of-12">
           <a class="button" onclick="navigatemainPage({!size},'{!retailer}','{!Premise}','{!channel}');">Apply</a>
        </div>
     </apex:actionRegion>
  </div>
</div>
<!--</div>--> 
</div>           
</apex:form>
</html>
</apex:page>